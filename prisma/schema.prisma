generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          String     @id @default(uuid())
  firstname   String
  lastname    String
  phoneNumber BigInt     @unique
  email       String
  password    String
  updatedAt   DateTime   @updatedAt
  createdAt   DateTime   @default(now())
  Products    Products[]
}

model Products {
  id          String    @id @default(uuid())
  price       Int
  quantity    Int
  name        String
  description String
  imgUrls     String[]
  hasDelivery Boolean
  isNew       Boolean
  user        Users     @relation(fields: [usersId], references: [id])
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
  usersId     String
  Category    Category?
}

model Category {
  id           String   @id @default(uuid())
  categoryName String
  products     Products @relation(fields: [productsId], references: [id])
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
  productsId   String   @unique
}
